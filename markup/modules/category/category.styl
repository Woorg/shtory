.category
	border-top 1px solid #f4f4f4
	border-bottom 1px solid #f4f4f4
	background $white
	&__in
		padding-top 43px
		padding-bottom 40px
		clearfix()

.category-items
	padding-top 23px
	padding-bottom 32px
	font-size 0
	clearfix()
	&__item
		margin-right 30px
		margin-bottom 43px
		padding 0 10px
		display inline-block
		vertical-align top
		width 262px
		&:nth-child(3n+3)
			margin-right 0
	&__link
		display block
		text-align center
		text-decoration none
		color #575656
	&__title
		margin-bottom 10px
		display block
		font-pfbld(18px, 24px)
	&__image
		margin-bottom 15px
		padding 5px
		display block
		background-color white
		box-shadow 0 0 10px #e5e5e5
		img
			width 232px
			height 143px
	&__desc
		display block
		font-pfreg(14px, 18px)
		color #575656


