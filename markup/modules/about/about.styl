.about
	&__in
		padding-top 33px
		padding-bottom 30px
	&__image
		margin-right 60px
		padding 20px
		float left
		width 330px
		height 280px
		border-radius 2px 1px 1px 2px
		box-shadow 0 0 10px #e5e5e5
		img
			width 290px
			height 240px
	&__title
		margin-top 53px
		margin-bottom 17px
		font-pfbld(30px,32px)


	&__more
		position relative
		display inline-block
		font-pfreg(16px,1)
		color #805175
		text-decoration none
		&:after
			position absolute
			top 50%
			right -12px
			margin-top -3px
			content ''
			bg($linkarrow)

.text
	margin-bottom 18px
	&_short
		margin-bottom 18px


