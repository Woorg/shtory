.hero
	position relative
	height 522px

.main-slider
	position relative
	height 522px
	color $black
	overflow hidden
	clearfix()
	&__item
		position relative
		height 522px
	&__image
		position absolute
		top 0
		left 0
		width 100%
		img
			min-height 522px
	&__in
		position relative
		z-index 1
	&__w
		position absolute
		top 0
		left 0
		width 100%
		height 502px
		background url('../img/general/hero_top.png') 0 0 repeat-x
	&__shadow
		position absolute
		bottom 0
		left 0
		width 100%
		height 20px
		background url('../img/general/hero_shadow.png') 0 0 repeat-x
		z-index 0
	&__title
		margin-top 196px
		margin-bottom 8px
		font-pfbld(36px,1)
		text-transform uppercase
	&__text
		font-pfit(24px,30px)

.main-slider-pag
	position absolute
	left 0
	bottom 14px
	width 100%
	text-align center
	font-size 0
	z-index 10
	&__link
		margin-left 6px
		border 2px solid $white
		width 12px
		height 12px
		display inline-block
		border-radius 50%
		&.active
			background $white


